
# If not running interactively, don't do anything
[ -z "$PS1" ] && return

test -s ~/.alias && . ~/.alias || true

source ~/private/settings/home/.bashrc_common

# Source the SCS scripts (tool licensing)
if [ -f /etc/scs-scripts/scs_settings.sh ]; then
    source /etc/scs-scripts/scs_settings.sh
fi

# Set email address to be used by git commit
export EMAIL="fabian.schenkel@scs.ch"

# Add new paths
export PATH=$PATH:"/opt/toolchain/codecomposer/ccs_5.1.1/ccsv5/eclipse/":"/usr/scs/fschenkel/tools/feh-2.14/src:/usr/scs/fschenkel/tools/astyle/build/gcc/bin"

# For ncurses ascii art in utf-8
export NCURSES_NO_UTF8_ACS=1

# Prepare SSH-Agent
SSHAGENT=/usr/bin/ssh-agent
SSHAGENTARGS="-s -t10h"
if [ -z "$SSH_AUTH_SOCK" -a -x "$SSHAGENT" ]; then
    eval `$SSHAGENT $SSHAGENTARGS` > /dev/null
    trap "kill $SSH_AGENT_PID" 0
fi
if [ -f /etc/profile.d/rvm.sh ];then
  . /etc/profile.d/rvm.sh
fi

# Aliases for convenience
alias s="ssh-add"
alias tig="~/tools/tig-1.1/tig --all"
function xenv { . /opt/toolchain/xilinx/Xilinx${1}i/settings64.sh && echo -en "\033]2;Xilinx ${1}\007"; }
alias x="xenv 14.7"
alias m="export PATH=/opt/toolchain/modelsim/modelsim_dlx_10.0e/bin:${PATH}"
alias meld="/usr/scs/fschenkel/tools/meld-1.6.1/bin/meld"
alias gitclean="~/private/settings/scripts/gitclean.sh"
alias imagej="~/tools/ImageJ/ImageJ"

